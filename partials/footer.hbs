<footer class="site-footer">
    &copy; 2020 {{@site.title}}
    <div class="footer-social">
        {{#if @site.facebook}}
            <a class="footer-social-item" href="{{facebook_url @site.facebook}}"
                target="_blank" rel="noopener noreferrer">
                <i class="icon icon-facebook"></i>
            </a>
        {{/if}}
        <a class="footer-social-item" href="https://instagram.com/Ismaeel.Akram"
                target="_blank" rel="noopener noreferrer">
                <i class="icon icon-instagram"></i>
            </a>
        {{#if @site.twitter}}
            <a class="footer-social-item" href="{{twitter_url @site.twitter}}"
                target="_blank" rel="noopener noreferrer">
                <i class="icon icon-twitter"></i>
            </a>
        {{/if}}
    </div>
</footer>